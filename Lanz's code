import random

# Define a dictionary of responses based on keyword pairs
responses = {
        "hello": ["Hi there!", "Hello!", "Greetings!"],
    "name": ["I'm just a bot without a name.", "Call me whatever you like!"],
    "bye": ["Goodbye!", "See you later!", "Take care!"],
    "help": ["How can I assist you?", "What do you need help with?"],
    "favorite": ["I really like", "I love"],
    "anime": ["frieren", "lucky star"],
    
    
    ("hello", "how"): ["Hi there! How can I help you today?", "Hello! What would you like to know?"],
    ("how", "you"): ["I'm just a chatbot, but I'm doing well! How about you?", "I'm great! What about you?"],
    ("what", "name"): ["I'm just a bot without a name, but you can call me Chatbot!", "You can call me whatever you like!"],
    ("bye", "see"): ["Goodbye! Hope to chat again soon!", "See you later! Take care!"],
    ("need", "help"): ["How can I assist you?", "What do you need help with?"],
    ("pup", "account"): ["Try to email the pup for your account if possible", "If account problems have occured please email the pup"],
    ("didn't received", "account"): ["Try to visit the Pup sta mesa if it hasn't any form of reply", "Visit the PUP Sta mesa to talk about your account"],
    ("how", "wait"): ["Wait for 7 working days"],
}

def get_response(user_input):
    #Return a response based on keyword pairs found in user input.
    user_input = user_input.lower().strip()
    
    # Split the input into words
    words = user_input.split()
    
    # Check for keywords in the input
    for word in words:
        if word in responses:
            return random.choice(responses[word])
    
    
    # Check for keyword pairs in the input
    for i in range(len(words)):
        for j in range(i + 1, len(words)):
            pair = (words[i], words[j])
            if pair in responses:
                return random.choice(responses[pair])
    
    return "I'm not sure I understand that."

def main():
    #Main function to run the chatbot.
    print("Welcome to the chatbot! Type 'quit' to exit.")
    
    while True:
        user_input = input("You: ")
        if user_input.lower() == 'quit':
            print("Bot: Thank you for chatting! Goodbye!")
            break
        elif not user_input.strip():  # Handle empty input
            print("Bot: Please say something!")
        else:
            response = get_response(user_input)
            print("Bot:", response)

if __name__ == "__main__":
    main()
